# ----------------------------
# Core
# ----------------------------
APP_NAME=AI Clinic Call Assistant
ENVIRONMENT=dev
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_db
PUBLIC_BASE_URL=http://localhost:8000

# Demo mode limits call length for testing
DEMO_MODE=true
MAX_DEMO_TURNS=6
SKIP_NAME_CONFIRMATION=true

# Redis for persistent job queue (optional, add later)
REDIS_URL=redis://localhost:6379

# ----------------------------
# Twilio
# ----------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX
CLINIC_STAFF_NUMBER=+1XXXXXXXXXX
CLINIC_DOCTOR_NUMBER=+1XXXXXXXXXX
HOLD_MUSIC_URL=https://example.com/hold-music.mp3
STAFF_NOTIFY_NUMBERS=+1XXXXXXXXXX,+1YYYYYYYYYY
DOCTOR_NOTIFY_NUMBERS=+1XXXXXXXXXX

# ----------------------------
# LLM + STT/TTS Providers
# ----------------------------
LLM_PROVIDER=auto
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.1-8b-instant
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

DEEPGRAM_API_KEY=your_deepgram_api_key
STT_PROVIDER=twilio
TWILIO_SPEECH_LANGUAGE=en-US
TWILIO_SPEECH_MODEL=phone_call
TWILIO_DEEPGRAM_SPEECH_MODEL=deepgram_nova-2
TWILIO_SPEECH_HINTS=appointment,callback,clinic hours,medication refill
STT_FALLBACK_EMPTY_TURNS=2
STT_LOW_CONFIDENCE_THRESHOLD=0.45
WS_BRAIN_MODE=true
WS_WEBHOOK_FALLBACK=true

TTS_PROVIDER=twilio
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5

GOOGLE_TTS_CREDENTIALS_PATH=/absolute/path/to/google-credentials.json
GOOGLE_TTS_VOICE_NAME=en-US-Neural2-F
GOOGLE_TTS_LANGUAGE_CODE=en-US
